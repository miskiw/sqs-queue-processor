{
    "extends": "airbnb",
    "env": {
        "browser": false,
        "node": true,
        "es6": true
    },
    "rules": {
        "strict": 0,
        "eol-last": 0,
        "global-require": 0,
        "no-console": "warn",
        "import/no-extraneous-dependencies": 0,
        "no-underscore-dangle": 0,
        "comma-dangle": 0,
        "import/no-dynamic-require": 0,
        "no-plusplus": [
            "error",
            {
                "allowForLoopAfterthoughts": true
            }
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "one-var": [2, {
            "var": "never", 
            "let": "never", 
            "const": "never" 
        }]
    }
}